@model asnlegalapp.Models.Tb_Cotizaciones
@{
    ViewBag.Title = "Vista_previa";
}

<div class="container-fluid">
    <!-- Page-Title -->
    <div class="row">
        <div class="col-sm-12">
            <div class="page-title-box">
                <div class="row">
                    <div class="col">
                        <h4 class="page-title">Cotizaciones</h4>
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="javascript:void(0);">CRM</a></li>
                            <li class="breadcrumb-item"><a href="javascript:void(0);">Cotizaciones</a></li>
                            <li class="breadcrumb-item active">Vista previa</li>
                        </ol>
                    </div><!--end col-->
                    @*<div class="col-auto align-self-center">
                            <a href="#" class="btn btn-sm btn-outline-primary" id="Dash_Date">
                                <span class="day-name" id="Day_Name">Today:</span>&nbsp;
                                <span class="" id="Select_date">Jan 11</span>
                                <i data-feather="calendar" class="align-self-center icon-xs ml-1"></i>
                            </a>

                        </div>end col*@

                </div><!--end row-->
            </div><!--end page-title-box-->
        </div><!--end col-->
    </div><!--end row-->
    <div class="row demo">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body invoice-head">
                    <div class="row">
                        <div class="col-md-4 align-self-center">
                            <img src="~/Content/assets/images/logos/ASN-LEGAL-LOGO.png" alt="logo-small" class="logo-sm mr-1" height="24">
           
                           
                        </div><!--end col-->
                        <div class="col-md-8">

                            <ul class="list-inline mb-0 contact-detail float-right">
                                <li class="list-inline-item">
                                    <div class="pl-3">
                                        <i class="mdi mdi-web"></i>
                                        <p class="text-muted mb-0">www.asn-legal.com</p>
                                 
                                    </div>
                                </li>
                                <li class="list-inline-item">
                                    <div class="pl-3">
                                        <i class="mdi mdi-phone"></i>
                                        <p class="text-muted mb-0">+503 2323 6767</p>
                                     
                                    </div>
                                </li>
                                <li class="list-inline-item">
                                    <div class="pl-3">
                                        <i class="mdi mdi-map-marker"></i>
                                        <p class="text-muted mb-0">Paseo General Escalon y Calle La Ceiba, Edificio #4828 </p>
                                        <p class="text-muted mb-0">Local 3 Nodo E4, Colonia Escalon, San Salvador, El Salvador</p>
                                    </div>
                                </li>
                            </ul>
                        </div><!--end col-->
                    </div><!--end row-->
                </div><!--end card-body-->
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="">
                                <h6 class="mb-0"><b>Fecha :</b> @Model.Fecha.ToShortDateString()</h6>
                                <h6><b>No :</b> @("CT0" + Model.ID_cotizacion + "-" + Model.Fecha.Year)</h6>
                            </div>
                        </div><!--end col-->
                        <div class="col-md-12">
                            <div class="float-left">
                                <address class="font-13">
                                    <strong class="font-14">Cliente :</strong><br>
                                    @Model.Tb_Clientes.Nombre @Model.Tb_Clientes.Apellido<br>
                                    @Model.Tb_Clientes.DUI<br>
                                    @Model.Tb_Clientes.Direccion<br>
                                    @Model.Tb_Clientes.Telefono

                                </address>
                            </div>
                        </div><!--end col-->

                    </div><!--end row-->

                    <div class="row">
                        <div class="col-lg-12">
                            <div class="table-responsive project-invoice">
                                <table class="table table-bordered mb-0">
                                    <thead class="thead-light">
                                        <tr>
                                            <th>Servicios</th>
                                            <th>Horas</th>
                                            <th>Costo</th>
                                            <th>Subtotal</th>
                                        </tr><!--end tr-->
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.Tb_Cotizacion_detalle) {
         <tr>
                                            <td>
                                                <h5 class="mt-0 mb-1 font-14">@item.Descripcion</h5>
                                               
                                            </td>
                                            <td>@item.Horas</td>
                                            <td>$@item.Costo</td>
                                            <td>$@(item.Horas*item.Costo)</td>
                                        </tr><!--end tr-->
                                        }
                               


                                        <tr>
                                            <td colspan="2" class="border-0"></td>
                                            <td class="border-0 font-14 text-dark"><b>Sub Total</b></td>
                                            <td class="border-0 font-14 text-dark"><b>$@Model.Tb_Cotizacion_detalle.Sum(c=> (c.Horas*c.Costo))</b></td>
                                        </tr><!--end tr-->
                                        <tr>
                                            <th colspan="2" class="border-0"></th>
                                            <td class="border-0 font-14 text-dark"><b>Impuesto</b></td>
                                            <td class="border-0 font-14 text-dark"><b>$0.00</b></td>
                                        </tr><!--end tr-->
                                        <tr class="bg-black text-white">
                                            <th colspan="2" class="border-0"></th>
                                            <td class="border-0 font-14"><b>Total</b></td>
                                            <td class="border-0 font-14"><b>$@Model.Tb_Cotizacion_detalle.Sum(c => (c.Horas * c.Costo))</b></td>
                                        </tr><!--end tr-->
                                    </tbody>
                                </table><!--end table-->
                            </div>  <!--end /div-->
                        </div>  <!--end col-->
                    </div><!--end row-->

                    <div class="row justify-content-center">
                        <div class="col-lg-12">
                            <h5 class="mt-4">Terminos y condiciones :</h5>
                            <ul class="pl-3">
                                <li><small class="font-12">Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua </small></li>
                                <li><small class="font-12">sed do eiusmod tempor incididunt ut labore et dolore magna aliqua</small></li>
                            </ul>
                        </div> <!--end col-->

                    </div><!--end row-->
                    <hr>
    
                </div><!--end card-body-->
            </div><!--end card-->
        </div><!--end col-->
    </div><!--end row-->

    <div class="row">
        <div class="col ml-auto align-self-center">
            <button id="submit_data" class="btn btn-primary" onclick="crearCotizacion()">Imprimir</button>
            <a href="@Url.Action("Imprimir","Cotizaciones")" target="_blank" class="btn btn-success" >Imprimir personalizado</a>

        </div>


    </div>
    <!-- end page title end breadcrumb -->

</div><!-- container -->



<script>
    window.onload = function () {
        
    };
    function crearCotizacion() {
        $(".demo").printThis({
            importCSS: true,            // import parent page css
            importStyle: true        // import style tags
        });
    }
</script>