
@{
    ViewBag.Title = "Nuevo_proyecto";
    List<asnlegalapp.Models.Tb_Clientes> lstClientes = (List<asnlegalapp.Models.Tb_Clientes>)ViewBag.lstClientes;
}

<div class="container-fluid">
    <!-- Page-Title -->
    <div class="row">
        <div class="col-sm-12">
            <div class="page-title-box">
                <div class="row">
                    <div class="col">
                        <h4 class="page-title">Proyectos</h4>
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="javascript:void(0);">CRM</a></li>
                            <li class="breadcrumb-item"><a href="javascript:void(0);">Proyectos</a></li>
                            <li class="breadcrumb-item active">Nuevo</li>
                        </ol>
                    </div><!--end col-->


                </div><!--end row-->
            </div><!--end page-title-box-->
        </div><!--end col-->
    </div><!--end row-->
    <div class="row">
        <div class="col-lg-12">
            <ul class="list-inline">
                <li class="list-inline-item">
                    <h5 class="mt-0 font-14">Crea un nuevo proyecto para un cliente existente y gestiona su proceso.</h5>
                </li>
            </ul>
        </div><!--end col-->

        <div class="col-lg-6 text-right">
            <div class="text-right">

            </div>
        </div><!--end col-->
    </div><!--end row-->
    <!-- Page-Title -->
    <div class="row">
        <div class="col-sm-12">
            <div class="page-title-box">
                <div class="row">
                    <!--aqui inicia el formulario de nuevo proyecto-->

                    <div class="col-12">
                        <div class="card">
                            <div class="card-body">
                                @using (Html.BeginForm())
                                {
                                    @Html.AntiForgeryToken()
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <form>

                                                <div class="form-group">
                                                    <label for="pro-end-date">Seleccione el cliente: </label>
                                                    <select class="form-control" name="ID_cliente" id="ID_cliente">
                                                        @*<option>Seleccione</option>*@
                                                        @foreach (var cliente in lstClientes)
                                                        {
                                                            <option value="@cliente.ID_cliente">@cliente.Nombre</option>
                                                        }

                                                    </select>
                                                </div>


                                                <div class="form-group">
                                                    <label for="projectName">Nombre del proyecto :</label>
                                                    <input type="text" class="form-control" id="Nombre" name="Nombre" aria-describedby="emailHelp" placeholder="Ingresa el nombre del proyecto">

                                                </div><!--end form-group-->
                                                <div class="form-group">
                                                    <div class="row">
                                                        <div class="col-lg-6 mb-2 mb-lg-0">
                                                            <label for="pro-end-date">Tipo de proyecto</label>
                                                            <select class="form-control" id="Tipo" name="Tipo">
                                                                <option>Seleccione</option>
                                                                <option>Penal</option>
                                                                <option>Familia </option>
                                                                <option>Tributario</option>
                                                                <option>Mercantil</option>
                                                                <option>Civil</option>
                                                            </select>
                                                        </div><!--end col-->
                                                        <div class="col-lg-3 col-6">
                                                            <label for="pro-end-date">Prioridad</label>
                                                            <select class="form-control" id="Prioridad" name="Prioridad">
                                                                <option>Seleccione</option>
                                                                <option>Alta</option>
                                                                <option>Media</option>
                                                                <option>Baja</option>
                                                            </select>
                                                        </div><!--end col-->
                                                        <div class="col-lg-3 col-6">
                                                            <label for="pro-end-date">Estado</label>
                                                            <select class="form-control" id="Estado" name="Estado">
                                                                <option>Seleccione</option>
                                                                <option>En espera</option>
                                                                <option>En progreso</option>
                                                                <option>Finalizado</option>
                                                            </select>
                                                        </div><!--end col-->
                                                    </div><!--end row-->
                                                </div><!--end form-group-->
                                                <div class="form-group">
                                                    <label for="pro-message">Descripcion</label>
                                                    <textarea class="form-control" rows="5" id="Descripcion" name="Descripcion" placeholder="Escribe aqui..."></textarea>
                                                </div><!--end form-group-->

                                                <button type="submit" class="btn btn-primary btn-sm">Guardar proyecto</button>

                                            </form>  <!--end form-->
                                        </div><!--end col-->

                                    </div><!--end row-->
                                }
                            </div><!--end card-body-->
                        </div><!--end card-->
                    </div><!--end col-->
                </div><!--end row-->
            </div><!--end page-title-box-->
        </div><!--end col-->
    </div><!--end row-->
    <!-- end page title end breadcrumb -->


</div><!-- container -->