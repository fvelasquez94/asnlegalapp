

@model asnlegalapp.Models.Tb_Proyectos

@{
    ViewBag.Title = "Edit";
    List<asnlegalapp.Models.Tb_Clientes> lstClientes = (List<asnlegalapp.Models.Tb_Clientes>)ViewBag.lstClientes;
}


<div class="container-fluid">
    <!-- Page-Title -->
    <div class="row">
        <div class="col-sm-12">
            <div class="page-title-box">
                <div class="row">
                    <!--aqui inicia el formulario de nuevo proyecto-->

                    <div class="col-12">
                        <div class="card">
                            <div class="card-header">
                                <div class="row align-items-center">
                                    <div class="col">
                                        <h4 class="card-title">Editar proyecto</h4>
                                        <p class="text-muted mb-0">Ingresa la informacion del proyecto.</p>
                                    </div><!--end col-->
                                    <div class="col-lg-6 text-right">

                                    </div>
                                </div>  <!--end row-->
                            </div><!--end card-header-->
                            <div class="card-body">
                                @using (Html.BeginForm())
                                {
                                    @Html.AntiForgeryToken()
                                    <div class="row">
                                        @Html.HiddenFor(model => model.ID_proyecto)

                                        <div class="col-lg-12">
                                            <form>
                                                <div class="form-group">
                                                    <label for="pro-end-date">Seleccione el cliente: </label>
                                                    <select class="form-control" name="ID_cliente" id="ID_cliente">
                                                        @foreach (var cliente in lstClientes)
                                                        {
                                                            if (cliente.ID_cliente == Model.ID_cliente)
                                                            {
                                                                <option selected value="@cliente.ID_cliente">@cliente.Nombre</option>
                                                            }
                                                            else
                                                            {
                                                                <option value="@cliente.ID_cliente">@cliente.Nombre</option>
                                                            }

                                                        }

                                                    </select>
                                                </div>
                                          
                                                <div class="form-group">
                                                    <label for="pro-end-date">Proyecto Activo: </label>
                                                    @if (Model.Activo == true)
                                                    {
                                                    <input id="Activo" name="Activo" type="checkbox" value="true" checked/>
                                                    }
                                                    else {
                                                    <input id="Activo" name="Activo" type="checkbox" value="false" />
                                                    }
                                                   
                                                </div>
                                             
                                                <div class="form-group">
                                                    <label for="projectName">Nombre del proyecto :</label>
                                                    <input type="text" class="form-control" id="Nombre" name="Nombre" aria-describedby="emailHelp" placeholder="Ingresa el nombre del proyecto" value="@Model.Nombre">

                                                </div><!--end form-group-->
                                                <div class="form-group">
                                                    <div class="row">
                                                        <div class="col-lg-6 mb-2 mb-lg-0">
                                                            <label for="pro-end-date">Tipo de proyecto</label>
                                                            <select class="form-control" id="Tipo" name="Tipo">

                                                                @if (Model.Tipo == "Penal")
                                                                {
                                                                    <option selected>Penal</option>
                                                                }
                                                                else
                                                                {
                                                                    <option>Penal</option>
                                                                }
                                                                @if (Model.Tipo == "Familia")
                                                                {
                                                                    <option selected>Familia</option>
                                                                }
                                                                else
                                                                {
                                                                    <option>Familia</option>
                                                                }
                                                                @if (Model.Tipo == "Tributario")
                                                                {
                                                                    <option selected>Tributario</option>
                                                                }
                                                                else
                                                                {
                                                                    <option>Tributario</option>
                                                                }
                                                                @if (Model.Tipo == "Mercantil")
                                                                {
                                                                    <option selected>Mercantil</option>
                                                                }
                                                                else
                                                                {
                                                                    <option>Mercantil</option>
                                                                }
                                                                @if (Model.Tipo == "Civil")
                                                                {
                                                                    <option selected>Civil</option>
                                                                }
                                                                else
                                                                {
                                                                    <option>Civil</option>
                                                                }
                                                            </select>
                                                        </div><!--end col-->
                                                        <div class="col-lg-3 col-6">
                                                            <label for="pro-end-date">Prioridad</label>
                                                            <select class="form-control" id="Prioridad" name="Prioridad">


                                                                @if (Model.Prioridad == "Alta")
                                                                {
                                                                    <option selected>Alta</option>
                                                                }
                                                                else
                                                                {
                                                                    <option>Alta</option>
                                                                }
                                                                @if (Model.Prioridad == "Media")
                                                                {
                                                                    <option selected>Media</option>
                                                                }
                                                                else
                                                                {
                                                                    <option>Media</option>
                                                                }
                                                                @if (Model.Prioridad == "Baja")
                                                                {
                                                                    <option selected>Baja</option>
                                                                }
                                                                else
                                                                {
                                                                    <option>Baja</option>
                                                                }
                                                            </select>
                                                        </div><!--end col-->
                                                        <div class="col-lg-3 col-6">
                                                            <label for="pro-end-date">Estado</label>
                                                            <select class="form-control" id="Estado" name="Estado">

                                                                @if (Model.Estado == "En espera")
                                                                {
                                                                    <option selected>En espera</option>
                                                                }
                                                                else
                                                                {
                                                                    <option>En espera</option>
                                                                }
                                                                @if (Model.Estado == "En progreso")
                                                                {
                                                                    <option selected>En progreso</option>
                                                                }
                                                                else
                                                                {
                                                                    <option>En progreso</option>
                                                                }
                                                                @if (Model.Estado == "Finalizado")
                                                                {
                                                                    <option selected>Finalizado</option>
                                                                }
                                                                else
                                                                {
                                                                    <option>Finalizado</option>
                                                                }
                                                            </select>
                                                        </div><!--end col-->
                                                    </div><!--end row-->
                                                </div><!--end form-group-->
                                                <div class="form-group">
                                                    <label for="pro-message">Descripcion:</label>
                                                    <textarea class="form-control" rows="5" id="Descripcion" name="Descripcion" placeholder="Escribe aqui...">@Model.Descripcion</textarea>
                                                </div><!--end form-group-->

                                                <button type="submit" class="btn btn-success">Guardar cambios</button>

                                            </form>  <!--end form-->
                                        </div><!--end col-->

                                    </div><!--end row-->
                                }
                            </div><!--end card-body-->
                        </div><!--end card-->
                    </div><!--end col-->
                </div><!--end row-->
            </div><!--end page-title-box-->
        </div><!--end col-->
    </div><!--end row-->
    <!-- end page title end breadcrumb -->


</div><!-- container -->

<div>
    @Html.ActionLink("Back to List", "Activos")
</div>
