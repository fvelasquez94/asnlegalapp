@model List<asnlegalapp.Models.Tb_Proyectos>
@{
    ViewBag.Title = "Proyectos_archivados";
}


<div class="container-fluid">
    <!-- Page-Title -->
    <div class="row">
        <div class="col-sm-12">
            <div class="page-title-box">
                <div class="row">
                    <div class="col">
                        <h4 class="page-title">Proyectos</h4>
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="javascript:void(0);">CRM</a></li>
                            <li class="breadcrumb-item"><a href="javascript:void(0);">Proyectos</a></li>
                            <li class="breadcrumb-item active">Archivados</li>
                        </ol>
                    </div><!--end col-->
                    @*<div class="col-auto align-self-center">
                            <a href="#" class="btn btn-sm btn-outline-primary" id="Dash_Date">
                                <span class="day-name" id="Day_Name">Today:</span>&nbsp;
                                <span class="" id="Select_date">Jan 11</span>
                                <i data-feather="calendar" class="align-self-center icon-xs ml-1"></i>
                            </a>

                        </div>end col*@

                </div><!--end row-->
            </div><!--end page-title-box-->
        </div><!--end col-->
    </div><!--end row-->
    <div class="row">
        <div class="col-lg-12">
            <ul class="list-inline">
                <li class="list-inline-item">
                    <h5 class="mt-0 font-14">Listado de proyectos archivados. <span class="badge badge-blue">@Model.Count()</span></h5>
                </li>
            </ul>
        </div><!--end col-->


    </div><!--end row-->
    <!-- end page title end breadcrumb -->
    <div class="row">
        <div class="col-12">
                            <div class="card">

                                <div class="card-body">
                                    <div class="table-responsive-sm">
                                        <table class="table mb-0">

                                            <thead>
                                                <tr>
                                                    <th scope="col">ID</th>
                                                    <th scope="col">Nombre</th>
                                                    <th scope="col">Tipo</th>
                                                    <th scope="col">Cliente</th>
                                                    <th scope="col">Prioridad</th>
                                                    <th scope="col">Fecha creacion</th>
                                                    <th scope="col" class="text-right">Action</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @if (Model != null)
                                                {
                                                    if (Model.Count() > 0)
                                                    {
                                                        foreach (var item in Model)
                                                        {

                                                            <tr>
                                                                <td> @("PR0" + item.ID_proyecto + "-" + item.Fecha_creacion.Year)</td>
                                                                <td>
                                                                    <div class="media">

                                                                        <div class="media-body align-self-center">
                                                                            <h6 class="m-0">@item.Nombre</h6>
                                                                            <p class="mb-0 text-muted font-11">@item.Descripcion</p>
                                                                        </div><!--end media body-->
                                                                    </div>
                                                                </td>
                                                                <td>@item.Tipo</td>
                                                                <td><i class="dripicons-user mr-2 text-dark"></i>@item.Tb_Clientes.Nombre @item.Tb_Clientes.Apellido</td>
                                                                <td>
                                                                    <span class="badge badge-danger">@item.Prioridad</span>

                                                                </td>
                                                                <td>@item.Fecha_creacion.ToShortDateString()</td>
                                                                <td class="text-right">
                                                                    <a href="@Url.Action("Editar","Proyectos", new {id = item.ID_proyecto})"><i class="las la-external-link-alt text-primary font-18"></i></a>


                                                                    <a href="@Url.Action("Delete","Proyectos", new {id = item.ID_proyecto})"><i class="las la-trash-alt text-danger font-18"></i></a>
                                                                </td>
                                                            </tr>
                                                        }
                                                    }
                                                }


                                            </tbody>
                                        </table><!--end /table-->
                                    </div><!--end /tableresponsive-->
                                </div><!--end card-body-->
                            </div><!--end card-->
        </div><!--end col-->
    </div><!--end row-->

</div><!-- container -->