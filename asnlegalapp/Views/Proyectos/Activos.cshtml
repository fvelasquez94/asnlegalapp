        function eliminar(id) {

            swal({
                title: 'Estas seguro de eliminar este proyecto?',
                text: "Se perderan todos los datos relacionados.",
                icon: 'warning',
                button: "Confirmar"
            }).then((result) => {
                if (result) {

                    var iddel = id;

        var url = '@Url.Action("DeleteConfirmed", "Proyectos", new { id = "START" })';


