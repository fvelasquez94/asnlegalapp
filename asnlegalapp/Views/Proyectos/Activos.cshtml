@{
    ViewBag.Title = "Proyectos_activos";
}

<div class="container-fluid">
    <!-- Page-Title -->
    <div class="row">
        <div class="col-sm-12">
            <div class="page-title-box">
                <div class="row">
                    <div class="col">
                        <h4 class="page-title">Proyectos</h4>
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="javascript:void(0);">CRM</a></li>
                            <li class="breadcrumb-item"><a href="javascript:void(0);">Proyectos</a></li>
                            <li class="breadcrumb-item active">Activos</li>
                        </ol>
                    </div><!--end col-->
                    @*<div class="col-auto align-self-center">
                        <a href="#" class="btn btn-sm btn-outline-primary" id="Dash_Date">
                            <span class="day-name" id="Day_Name">Today:</span>&nbsp;
                            <span class="" id="Select_date">Jan 11</span>
                            <i data-feather="calendar" class="align-self-center icon-xs ml-1"></i>
                        </a>

                    </div>end col*@
                    <div class="col-auto align-self-center">
                        <ul class="nav nav-pills mb-0 d-inline-flex" id="pills-tab" role="tablist">
                            <li class="nav-item">
                                <a class="nav-link active" id="pills-list-tab" data-toggle="pill" href="#List_style" role="tab" aria-controls="pills-list" aria-selected="true">
                                    <i class="las la-list-ul"></i>
                                </a>
                            </li>
                            <li class="nav-item mr-1">
                                <a class="nav-link " id="pills-grid-tab" data-toggle="pill" href="#Grid_Style" role="tab" aria-controls="pills-grid" aria-selected="false">
