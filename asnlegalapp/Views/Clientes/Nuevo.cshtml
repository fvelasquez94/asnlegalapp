@model asnlegalapp.Models.Tb_Clientes

@{
    ViewBag.Title = "Nuevo_cliente";
}


<div class="container-fluid">
    <!-- Page-Title -->
    <div class="row">
        <div class="col-sm-12">
            <div class="page-title-box">
                <div class="row">
                    <div class="col">
                        <h4 class="page-title">Clientes</h4>
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="javascript:void(0);">CRM</a></li>
                            <li class="breadcrumb-item"><a href="javascript:void(0);">Clientes</a></li>
                            <li class="breadcrumb-item active">Nuevo</li>
                        </ol>
                    </div><!--end col-->


                </div><!--end row-->
            </div><!--end page-title-box-->
        </div><!--end col-->
    </div><!--end row-->
    <div class="row">
        <div class="col-lg-12">
            <ul class="list-inline">
                <li class="list-inline-item">
                    <h5 class="mt-0 font-14">Crea un nuevo cliente para tu empresa.</h5>
                </li>
            </ul>
        </div><!--end col-->

        <div class="col-lg-6 text-right">
            <div class="text-right">

            </div>
        </div><!--end col-->
    </div><!--end row-->
    <!-- Page-Title -->
    <div class="row">
        <div class="col-sm-12">
            <div class="page-title-box">
                <div class="row">
                    <!--ingresar el formulario aqui-->

                    <div class="col-lg-12">
                        <div class="card">

                            <div class="card-body">
                                @using (Html.BeginForm())
                                {
                                    @Html.AntiForgeryToken()
                                    <div class="row">

                                        <div class="col-lg-6">
                                            <div class="form-group row">
                                                <label for="example-text-input" class="col-sm-2 col-form-label text-right">Nombre</label>
                                                <div class="col-sm-10">
                                                    <input class="form-control" type="text" value="" id="Nombre" name="Nombre" placeholder="Ingresa el nombre del cliente" required>
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label for="example-text-input" class="col-sm-2 col-form-label text-right">Apellido</label>
                                                <div class="col-sm-10">
                                                    <input class="form-control" type="text" value="" id="Apellido" name="Apellido" placeholder="Ingresa el apellido del cliente" required>
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label for="example-tel-input" class="col-sm-2 col-form-label text-right">Empresa</label>
                                                <div class="col-sm-10">
                                                    <input class="form-control" type="text" value="" id="Empresa" name="Empresa" placeholder="Ingresa direccion del cliente">
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label for="example-email-input" class="col-sm-2 col-form-label text-right">DUI</label>
                                                <div class="col-sm-10">
                                                    <input class="form-control" type="text" value="" id="DUI" name="DUI" placeholder="Ejemplo: 05155128-2" required>
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label for="example-tel-input" class="col-sm-2 col-form-label text-right">Teléfono</label>
                                                <div class="col-sm-10">
                                                    <input class="form-control" type="text" value="" id="Telefono" name="Telefono" placeholder="Ejemplo: 7907-7372" required>
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label for="example-tel-input" class="col-sm-2 col-form-label text-right">Correo</label>
                                                <div class="col-sm-10">
                                                    <input class="form-control" type="email" value="" id="Correo" name="Correo" placeholder="ejemplo@gmail.com" required>
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label for="example-tel-input" class="col-sm-2 col-form-label text-right">Direccion</label>
                                                <div class="col-sm-10">
                                                    <input class="form-control" type="text" value="" id="Direccion" name="Direccion" placeholder="Ingresa direccion del cliente">
                                                </div>
                                            </div>
            
                                            <button type="submit" class="btn btn-success">Guardar</button>

                                        </div>

                                    </div>}
                            </div>
                        </div>
                    </div><!--end row-->
                </div><!--end page-title-box-->
            </div><!--end col-->
        </div><!--end row-->
        <!-- end page title end breadcrumb -->
    </div><!-- container -->
</div>

